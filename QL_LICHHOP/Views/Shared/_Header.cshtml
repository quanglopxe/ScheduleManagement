
@{
    ViewBag.Title = "_Header";
}
<div style="background-color: #007bff; color: white;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div style="display: flex; align-items: center; padding: 10px;">
            <div>
                <img src="~/Content/img/logo.png" alt="Logo"
                     style="background-color: white; width: 90px; height: auto; border-radius: 50%; clip-path: circle(40% at 50% 50%);" />
            </div>
            <div style="text-align: left;">
                <b style="display: block">SỞ NÔNG NGHIỆP VÀ PHÁT TRIỂN NÔNG THÔN</b>
                <b style="display: block; color: yellow">VĂN PHÒNG ĐIỆN TỬ</b>
            </div>
        </div>
        <div style="display: flex; align-items: center;">
            <span style="margin-right: 10px;">Chào mừng bạn, [Tên người dùng]</span>
            <a href="#" style="color: white; text-decoration: none;">Đăng xuất</a>
        </div>
    </div>
    <nav class="navbar" style="background-color: royalblue; padding: 0;">        
        <ul style="list-style: none; display: flex; gap: 20px;">
            <li><a href="#" style="color: white; text-decoration: none;">Trang chủ</a></li>
            <li><a href="@Url.Action("Index","ExpectedSchedule")" style="color: white; text-decoration: none;">Duyệt lịch</a></li>
            <li><a href="#" style="color: white; text-decoration: none;">Lịch chính thức</a></li>
        </ul>
    </nav>
</div>
